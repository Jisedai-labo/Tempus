<div class="devise-container">
    <h2>登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <p>画像</p>
      <%= attachment_image_tag @user, :image,class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size:"30x30"%>
      <%= f.attachment_field :image, placeholder: "プロフィール画像", class: "user-edit-form" %>
 
      <%= f.label :name, "名前" %><br />
      <%= f.text_field :name %><br />

      <%= f.label :twitter_account, "Twitterアカウント" %><br />
      <%= f.text_field :twitter_account %><br />

      <%= f.label :github, "Githubアカウント" %><br />
      <%= f.text_field :github %><br />

      <%= f.label :biography, "自己紹介" %><br />
      <%= f.text_area :biography %><br />

    <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
        <%= f.label :password_confirmation, "パスワード確認" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
        <%= f.submit "登録", class:"btn button signup-button" %>
    </div>
    <% end %>

    <%= render "users/shared/links" %>
</div>